<img src="images.jpeg">
<div class="tweet">
  <h1>Whatchu wanna tweet, sucka?</h1>
  <form action="/tweet" method="POST">
  <!-- <label>Type twitter handle here<input type="text" name="handle"></label> -->
  <label>Type tweet here<input class="tweet-input" type="text" name="tweet" ></label>
  <input class="tweet-button" type="submit" value="Tweet this!">
  </form>
  <% if @error %>
    <p class="error">
      <%= @error %>
    </p>
    <% elsif @message %>
    <p class="message">
      <%= @message %>
    </p>
  <% end %>

